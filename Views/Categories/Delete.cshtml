@model AutodijeloviDemic.Models.Category

<h2>Obriši kategoriju</h2>

<p>Da li ste sigurni da želite obrisati ovu kategoriju?</p>

<dl class="dl-horizontal">
    <dt>Ime kategorije</dt>
    <dd>@Model.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />

    <button type="submit" name="confirm" value="true" class="btn btn-danger">Obriši</button>
    <button type="submit" name="confirm" value="false" class="btn btn-secondary">Otkaži</button>
</form>
