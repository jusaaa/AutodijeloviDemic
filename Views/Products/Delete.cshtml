@model AutodijeloviDemic.Models.Product

<h1>Obriši proizvod</h1>

<div>
    <h4>Da li ste sigurni da želite obrisati ovaj proizvod?</h4>
    <h5>@Model.Name</h5>
    @if (Model.ImageData != null && Model.ImageMimeType != null)
    {
        <img src="data:@Model.ImageMimeType;base64,@Convert.ToBase64String(Model.ImageData)" alt="@Model.Name" style="max-width: 150px;" />
    }
</div>

<!-- Forma za brisanje proizvoda sa sigurnosnom potvrdom -->
<form asp-action="Delete" method="post" id="deleteForm">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger" onclick="return confirmDelete();">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
</form>

<!-- JavaScript funkcija za potvrdu -->
<script type="text/javascript">
    function confirmDelete() {
        return confirm("Da li ste sigurni da želite obrisati ovaj proizvod?");
    }
</script>

