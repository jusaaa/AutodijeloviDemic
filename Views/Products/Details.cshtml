@model AutodijeloviDemic.Models.Product

<h1>Detalji o proizvodu</h1>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Cijena:</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Količina na stanju:</dt>
        <dd class="col-sm-10">@Model.Stock</dd>

        <dt class="col-sm-2">Kategorija:</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-4">Opis proizvoda</dt>
        <dd class="col-sm-8">@Model.Description</dd>

        <dt class="col-sm-2">Slika:</dt>
        <dd class="col-sm-10">
            @if (Model.ImageData != null && Model.ImageMimeType != null)
            {
                <img src="data:@Model.ImageMimeType;base64,@Convert.ToBase64String(Model.ImageData)" alt="@Model.Name" style="max-width: 300px;" />
            }
            else
            {
                <span>Nema slike</span>
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Uredi</a>
<a asp-action="Index" class="btn btn-secondary">Nazad</a>

